# TestWrightX Authentication Configuration
# Copy this file to .env and fill in your actual values

# Environment
NODE_ENV=development
TEST_DOMAIN=localhost
BASE_URL=http://localhost:3000

# Security Settings
JWT_SECRET=your-super-secure-jwt-secret-key-at-least-32-characters-long
SESSION_ENCRYPTION_KEY=your-session-encryption-key-at-least-32-characters-long
SESSION_TIMEOUT=3600
COOKIE_HTTP_ONLY=true
COOKIE_SECURE=false

# Authentication Credentials
ADMIN_EMAIL=admin@testwrightx.com
ADMIN_PASSWORD=Admin123!
CUSTOMER_EMAIL=customer@testwrightx.com
CUSTOMER_PASSWORD=Customer123!

# Rate Limiting
RATE_LIMITING_ENABLED=true
RATE_LIMIT_MAX_ATTEMPTS=5
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_BLOCK_DURATION=900000

# CSRF Protection
CSRF_ENABLED=true
CSRF_TOKEN_LENGTH=32

# Logging
LOG_LEVEL=info
SENSITIVE_DATA_MASKING=true
AUDIT_TRAIL=true

# OAuth2 Providers (optional - only set if you want to test OAuth flows)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

FACEBOOK_CLIENT_ID=your-facebook-client-id
FACEBOOK_CLIENT_SECRET=your-facebook-client-secret

GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

MICROSOFT_CLIENT_ID=your-microsoft-client-id
MICROSOFT_CLIENT_SECRET=your-microsoft-client-secret

LINKEDIN_CLIENT_ID=your-linkedin-client-id
LINKEDIN_CLIENT_SECRET=your-linkedin-client-secret

# SAML Providers (optional - only set if you want to test SAML flows)
OKTA_IDP_URL=https://your-okta-domain.okta.com/app/saml/login
ADFS_IDP_URL=https://your-adfs-server.company.com/adfs/ls/
AZUREAD_IDP_URL=https://login.microsoftonline.com/your-tenant-id/saml2

# SAML Configuration
SAML_SP_ENTITY_ID=https://your-app.com/saml/metadata